  <script>
    const SUFFIX_MATCH_LENGTH = 9;
    let totalChecksCount = 0;

    function loadData() {
      const raw = localStorage.getItem('trustcheck_reports');
      let local = [];
      try { local = raw ? JSON.parse(raw) : []; } catch(e) { local = []; }
      return local.map(item => ({ ...item, normalized: normalizeDigits(item.number) }));
    }

    function normalizeDigits(input) {
      if (!input) return "";
      const digits = String(input).replace(/\D+/g, '');
      return digits.replace(/^00/, '');
    }

    function isMatch(normalizedStored, normalizedQuery) {
      if (!normalizedStored || !normalizedQuery) return false;
      if (normalizedStored === normalizedQuery) return true;
      return normalizedStored.slice(-SUFFIX_MATCH_LENGTH) === normalizedQuery.slice(-SUFFIX_MATCH_LENGTH);
    }

    function processSearch() {
      const raw = document.getElementById('inputArea').value.trim();
      const resEl = document.getElementById('results');
      const loadingEl = document.getElementById('loading');
      
      resEl.innerHTML = '';

      if (!raw) {
        resEl.innerHTML = `
          <div class="result-card notfound">
            <div class="result-head">
              <div class="num"><i class="fas fa-info-circle"></i> من فضلك أدخل رقماً للبحث</div>
            </div>
          </div>`;
        return;
      }

      loadingEl.style.display = 'block';
      
      setTimeout(() => {
        const data = loadData();
        const norm = normalizeDigits(raw);
        
        if (!norm) {
          resEl.innerHTML = `
            <div class="result-card notfound">
              <div class="result-head">
                <div class="num"><i class="fas fa-exclamation-triangle"></i> لم نتمكن من تفسير الرقم</div>
              </div>
              <div class="note">يرجى إدخال رقم هاتف صحيح يحتوي على أرقام.</div>
            </div>`;
          loadingEl.style.display = 'none';
          return;
        }

        const matches = data.filter(d => isMatch(d.normalized, norm));

        if (matches.length) {
          matches.forEach(m => {
            resEl.innerHTML += renderMatchCard(raw, norm, m);
          });
        } else {
          resEl.innerHTML += renderNotFoundCard(raw, norm);
        }

        loadingEl.style.display = 'none';
        resEl.scrollIntoView({behavior:'smooth', block:'start'});
        
        totalChecksCount++;
        updateStats();
      }, 800);
    }

    function renderMatchCard(raw, norm, item) {
      const statusClass = (item.status === 'نصاب') ? 'bad' : 
                         (item.status === 'قليل الأدب' || item.status === 'مضايقات') ? 'warn' : 'ok';
      
      const statusIcon = (item.status === 'نصاب') ? 'fas fa-exclamation-circle' : 
                        (item.status === 'قليل الأدب' || item.status === 'مضايقات') ? 'fas fa-exclamation-triangle' : 
                        'fas fa-check-circle';
      
      return `
        <div class="result-card">
          <div class="result-head">
            <div class="num">
              <i class="fas fa-phone"></i>
              ${escapeHtml(raw)}
              <span class="normalized">${norm}</span>
            </div>
            <div class="status ${statusClass}">
              <i class="${statusIcon}"></i>
              ${escapeHtml(item.status)}
            </div>
          </div>
          <div class="note">
            <strong>سبب الإضافة:</strong>
            ${escapeHtml(item.note)}
          </div>
          <div class="meta">
            <i class="fas fa-calendar-alt"></i>
            تمت الإضافة: ${formatDate(item.createdAt)}
          </div>
        </div>
      `;
    }

    function renderNotFoundCard(raw, norm) {
      return `
        <div class="result-card notfound">
          <div class="result-head">
            <div class="num">
              <i class="fas fa-phone"></i>
              ${escapeHtml(raw)}
              <span class="normalized">${norm}</span>
            </div>
            <div class="status ok">
              <i class="fas fa-check-circle"></i>
              غير مبلّغ
            </div>
          </div>
          <div class="note">
            <strong>النتيجة:</strong> لا يوجد أي سجل لهذا الرقم في قاعدة بياناتنا. هذا مؤشر جيد!
          </div>
          
          <div class="report-box">
            <div class="report-title">
              <i class="fas fa-shield-alt"></i>
              هل واجهت مشكلة مع هذا الرقم؟
            </div>
            <p style="color:#047857;font-size:14px;margin:12px 0;line-height:1.7">
              لإضافة بلاغ رسمي وموثق، يُرجى التواصل معنا عبر واتساب مع إرفاق جميع الأدلة الواضحة والموثقة.
              نؤكد لك أننا نعامل جميع البلاغات بعدالة ومساواة تامة دون أي تحيز.
            </p>
            <ul class="report-list">
              <li>الرقم المُبلّغ عنه كاملاً</li>
              <li>سبب البلاغ بالتفصيل</li>
              <li>الأدلة الواضحة (لقطات شاشة، تسجيلات)</li>
              <li>الحالة المطلوبة للتصنيف</li>
            </ul>
            <a href="https://wa.me/201008627292?text=السلام%20عليكم%0A%0Aأريد%20الإبلاغ%20عن%20رقم:%20${encodeURIComponent(raw)}%0A%0Aسبب%20البلاغ:%20%0A%0A(يرجى%20إرفاق%20جميع%20الأدلة)" target="_blank" class="report-btn">
              <i class="fab fa-whatsapp"></i>
              تواصل للإبلاغ عبر واتساب
            </a>
          </div>
        </div>
      `;
    }

    function formatDate(dateStr) {
      if (!dateStr) return 'غير محدد';
      const d = new Date(dateStr);
      return d.toLocaleString('ar-EG', { 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric', 
        hour: '2-digit', 
        minute: '2-digit' 
      });
    }

    function escapeHtml(str){ 
      return String(str || '')
        .replaceAll('&','&amp;')
        .replaceAll('<','&lt;')
        .replaceAll('>','&gt;')
        .replaceAll('"','&quot;'); 
    }

    function updateStats() {
      document.getElementById('totalChecks').textContent = totalChecksCount.toLocaleString('ar-EG');
      const data = loadData();
      document.getElementById('totalReports').textContent = data.length.toLocaleString('ar-EG');
    }

    document.getElementById('inputArea').addEventListener('keydown', function(e){
      if(e.key === 'Enter'){ processSearch(); }
    });

    updateStats();
  </script>
